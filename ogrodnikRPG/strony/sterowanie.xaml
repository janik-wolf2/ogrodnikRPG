<Page x:Class="ogrodnikRPG.strony.sterowanie"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ogrodnikRPG.strony"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1200"
      Title="sterowanie">

    <Viewbox Stretch="Uniform">
        <Grid Width="1200" Height="700">
            <Grid>
                <Grid.Background>
                    <ImageBrush ImageSource="/resource/tloPomoc.png"></ImageBrush>
                </Grid.Background>
            </Grid>

            <Grid>
                <Grid.Background>
                    <SolidColorBrush Color="Green" Opacity="0.5"></SolidColorBrush>
                </Grid.Background>
                <TextBlock Text="Sterowanie" HorizontalAlignment="Center" Margin="0,30,0,531" FontFamily="Baloo" FontSize="80" Foreground="White" />
                <Button Cursor="Hand" Content="Powrót" Click="showMenuGlowne" FontSize="30" FontFamily="Baloo" Background="Green" Foreground="White" BorderBrush="White" BorderThickness="8" Margin="24,51,1044,568"/>
                <Button Cursor="Hand" Content="Jak grać?" Click="showJakGrac" FontSize="30" FontFamily="Baloo" Background="Green" Foreground="White" BorderBrush="White" BorderThickness="8" Margin="975,51,24,568"/>

                <TextBlock Text="W/A/S/D - Poruszanie się" FontFamily="Baloo" FontSize="46" Foreground="White" Margin="40,200,149,442"/>
                <TextBlock Text="E - Użyj przedmiotu" FontFamily="Baloo" FontSize="46" Foreground="White" Margin="40,272,149,370"/>
                <TextBlock Text="Q - Upuść przedmiot" FontFamily="Baloo" FontSize="46" Foreground="White" Margin="40,344,149,298"/>
                <TextBlock Text="1/2/3/4/5/6 - Wybierz przedmiot" FontFamily="Baloo" FontSize="46" Foreground="White" Margin="40,416,149,226"/>

                <Image Source="/resource/spray.png" Margin="116,480,871,35"></Image>
                <Image Source="/resource/ogrodnik.png" Margin="493,487,494,28"></Image>
                <Image Source="/resource/sekator.png" Margin="930,517,104,58"></Image>


            </Grid>
        </Grid>
    </Viewbox>
</Page>
