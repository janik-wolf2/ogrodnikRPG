<Page x:Class="ogrodnikRPG.strony.planszaGry"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ogrodnikRPG.strony"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1200"
      Title="planszaGry">

    <Viewbox Stretch="Uniform">
        <Grid Width="1200" Height="700">

            <Grid Margin="0,0,282,0">
                <Grid.Background>
                    <ImageBrush ImageSource="/resource/trawa.png" Stretch="UniformToFill"/>
                </Grid.Background>
                <Grid>
                    <Grid.Background>
                        <SolidColorBrush Color="Green" Opacity="0.5"/>
                    </Grid.Background>
                </Grid>
            </Grid>

            <Grid Margin="918,0,0,0">
                <Grid.Background>
                    <ImageBrush ImageSource="/resource/kamien.png" Stretch="Fill"/>
                </Grid.Background>
                <Grid>
                    <Grid.Background>
                        <SolidColorBrush Color="LightGray" Opacity="0.5"/>
                    </Grid.Background>
                </Grid>

            </Grid>

        </Grid>
    </Viewbox>
</Page>
