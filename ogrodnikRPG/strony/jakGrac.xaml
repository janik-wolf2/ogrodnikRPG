<Page x:Class="ogrodnikRPG.strony.jakGrac"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ogrodnikRPG.strony"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1200"
      Title="jakGrac">

    <Viewbox Stretch="Uniform">
        <Grid Width="1200" Height="700">
            <Grid>
                <Grid.Background>
                    <ImageBrush ImageSource="/resource/tloZasady.jpg"></ImageBrush>
                </Grid.Background>
            </Grid>

            <Grid>
                <Grid.Background>
                    <SolidColorBrush Color="DarkTurquoise" Opacity="0.5"></SolidColorBrush>
                </Grid.Background>
            </Grid>
        </Grid>
    </Viewbox>
</Page>
